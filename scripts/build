#!/bin/bash

# This is my build script that runs during Netlify deployment.
# My build command in Site settings > Build & deploy > Build command is
# chmod +x scripts/build;./scripts/build
# It is run from the root of the project.

# Create https://jessewei.dev/posts/PaperMod_diff
pip install ansi2html
chmod +x scripts/diff.py
# Outputs to scripts/PaperMod_diff
./scripts/diff.py
# Move output to content/ to deploy on site.
if [ -d "content/posts/papermod_diff" ]; then
    rm -rf content/posts/papermod_diff
fi
mv scripts/PaperMod_diff content/posts/papermod_diff

hugo
